# ============================================================================
# Azure DevOps Pipeline Setup - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# GitHub Configuration
# ----------------------------------------------------------------------------
GITHUB_REPO_URL="https://github.com/phinestsoftware/rogers-mass-migration"
GITHUB_REPO_NAME="phinestsoftware/rogers-mass-migration"
GITHUB_SERVICE_CONNECTION_NAME="GitHub-MassMigration"

# GitHub Personal Access Token (create at: https://github.com/settings/tokens)
# Required scopes: repo, admin:repo_hook
GITHUB_PAT=""

# ----------------------------------------------------------------------------
# Azure DevOps Configuration
# ----------------------------------------------------------------------------
# Format: https://dev.azure.com/YOUR_ORG
AZURE_DEVOPS_ORG=""
AZURE_DEVOPS_PROJECT="MassMigration"

# Azure DevOps Personal Access Token (create at: https://dev.azure.com/YOUR_ORG/_usersSettings/tokens)
# Required scopes: Full access (or Build, Code, Project, Service Connections, Variable Groups)
# Note: This is different from GitHub PAT - Azure DevOps CLI requires its own PAT
AZURE_DEVOPS_EXT_PAT=""

# ----------------------------------------------------------------------------
# Azure Subscription (auto-detected if empty, or specify explicitly)
# ----------------------------------------------------------------------------
AZURE_SUBSCRIPTION_ID=""
AZURE_SUBSCRIPTION_NAME=""
AZURE_TENANT_ID=""

# ----------------------------------------------------------------------------
# Azure Service Principal for Deployments
# ----------------------------------------------------------------------------
# Create with: az ad sp create-for-rbac --name "MassMigration-DevOps" --role contributor
AZURE_SP_ID=""
AZURE_SP_SECRET=""

# ----------------------------------------------------------------------------
# Function App Names (from Terraform output)
# ----------------------------------------------------------------------------
# Dev environment
DEV_FUNCTION_APP_NAME=""
DEV_RESOURCE_GROUP="rg-tokenmigration-dev"

# QA environment (leave empty if not deployed yet)
QA_FUNCTION_APP_NAME=""
QA_RESOURCE_GROUP="rg-tokenmigration-qa"

# Prod environment (leave empty if not deployed yet)
PROD_FUNCTION_APP_NAME=""
PROD_RESOURCE_GROUP="rg-tokenmigration-prod"

# ----------------------------------------------------------------------------
# Approvers (comma-separated Azure DevOps user emails)
# ----------------------------------------------------------------------------
QA_APPROVERS="user1@company.com"
PROD_APPROVERS="user1@company.com,user2@company.com"

# ----------------------------------------------------------------------------
# Optional: Skip certain steps (set to "true" to skip)
# ----------------------------------------------------------------------------
SKIP_PROJECT_CREATION="false"
SKIP_GITHUB_CONNECTION="false"
SKIP_AZURE_CONNECTIONS="false"
SKIP_VARIABLE_GROUP="false"
SKIP_ENVIRONMENTS="false"
SKIP_PIPELINE="false"
